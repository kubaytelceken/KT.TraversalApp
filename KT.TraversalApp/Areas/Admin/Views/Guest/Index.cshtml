@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Guest List</h1>
<a href="/Login/SignUp/" class="btn btn-outline-success btn-sm">Add User</a>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Name-Surname</th>
        <th>Usercode</th>
        <th>Email</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name + " " + @item.Surname</td>
                <td>@item.UserName</td>
            <td>@item.Email</td>

            <td><a href="/Admin/Guest/CommentUser/@item.Id" class="btn btn-outline-warning btn-sm">Comments</a></td>
            <td><a href="/Admin/Guest/ReservationUser/@item.Id" class="btn btn-outline-warning btn-sm">Toures</a></td>
            <td><a href="/Admin/Guest/EditUser/@item.Id" class="btn btn-outline-warning btn-sm">Update</a></td>
            <td><a href="/Admin/Guest/DeleteUser/@item.Id" class="btn btn-outline-danger btn-sm">Delete</a></td>
            </tr>
    }
</table>

