@model Guide
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Add Guide</h1>

<form method="post">
    <div class="form-group">
        @Html.Label("Name");
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Guide Photo");
        <input type="text" asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Instagram URL");
        <input type="text" asp-for="InstagramURL" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Twitter URL");
        <input type="text" asp-for="TwitterURL" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Description");
        <textarea cols="30" rows="5" class="form-control" asp-for="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <br />
    <button class="btn btn-outline-success">Create Guide</button>
</form>