@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Comment List</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>User</th>
        <th>Route</th>
        <th>Date</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.CommentUser</td>
            <td>@item.Destination.City</td>
            <td>@item.CommentDate.ToString("dd.MM.yyyy")</td>
            <td><a href="/Admin/Comment/UpdateComment/@item.Id" class="btn btn-outline-warning btn-sm">Update</a></td>
            <td><a href="/Admin/Comment/DeleteComment/@item.Id" class="btn btn-outline-danger btn-sm">Delete</a></td>
        </tr>
    }
</table>

