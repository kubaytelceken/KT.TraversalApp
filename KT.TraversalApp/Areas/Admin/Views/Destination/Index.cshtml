@using KT.Traversal.Entity.Concrete;
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Tour Routes</h1>
<a href="/Admin/Destination/AddDestination" class="btn btn-outline-success btn-sm">Add Destination</a>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>City</th>
        <th>Price</th>
        <th>Capacity</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.City</td>
            <td>@item.Price $</td>
            <td>@item.Capacity</td>
            <td><a href="/Destination/DestinationDetails/@item.Id" class="btn btn-outline-primary btn-sm">See On Website</a></td>
            <td><a href="/Admin/Destination/DeleteDestination/@item.Id" class="btn btn-outline-danger btn-sm">Delete</a></td>
            <td><a href="/Admin/Destination/UpdateDestination/@item.Id" class="btn btn-outline-warning btn-sm">Update</a></td>
        </tr>
    }
</table>
