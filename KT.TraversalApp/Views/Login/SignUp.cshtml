@using KT.TraversalApp.Models;
@model UserRegisterViewModel
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Traversal Registration</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- LINEARICONS -->
	<link rel="stylesheet" href="~/login_register/colorlib-regform-26/fonts/linearicons/style.css">

	<!-- STYLE CSS -->
	<link rel="stylesheet" href="~/login_register/colorlib-regform-26/css/style.css">


</head>

<body>

	<div class="wrapper">
		<div class="inner">
			<img src="~/login_register/colorlib-regform-26/images/image-1.png" alt="" class="image-1">
			<form method="post">
				<h3>New Account?</h3>
				<div class="form-holder">
					<span class="lnr lnr-user"></span>
					<input type="text" asp-for="Name" class="form-control" placeholder="Name">
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-holder">
					<span class="lnr lnr-user"></span>
					<input type="text" asp-for="Surname" class="form-control" placeholder="Surname">
					<span asp-validation-for="Surname" class="text-danger"></span>
				</div>
					<div class="form-holder">
					<span class="lnr lnr-user"></span>
					<input type="text" asp-for="Username" class="form-control" placeholder="Username">
					<span asp-validation-for="Username" class="text-danger"></span>
				</div>
				<div class="form-holder">
					<span class="lnr lnr-envelope"></span>
					<input type="text" asp-for="Mail" class="form-control" placeholder="Mail">
						<span asp-validation-for="Mail" class="text-danger"></span>
				</div>
					<div class="form-holder">
					<span class="lnr lnr-phone-handset"></span>
					<input type="text" asp-for="PhoneNumber" class="form-control" placeholder="Phone Number">
					<span asp-validation-for="PhoneNumber" class="text-danger"></span>
				</div>
				<div class="form-holder">
					<span class="lnr lnr-lock"></span>
					<input type="password" asp-for="Password" class="form-control" placeholder="Password">
						<span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<div class="form-holder">
					<span class="lnr lnr-lock"></span>
					<input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				</div>
				<div class="text-danger" asp-validation-summary="ModelOnly">

				</div>
				<button>
					<span>Register</span>
				</button>
				<button>
					<span>Sign In</span>
				</button>
			</form>
			<img src="~/login_register/colorlib-regform-26/images/image-2.png" alt="" class="image-2">
		</div>

	</div>

	<script src="~/login_register/colorlib-regform-26/js/jquery-3.3.1.min.js"></script>
	<script src="~/login_register/colorlib-regform-26/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>